// ChaseBall
if (timer_tick % 2 == 0) {
  if (this.getLocation().x < BALL.getLocation().x) {
    this.right();
  } else {
    this.left();
  }
} else {
  if (this.getLocation().y < BALL.getLocation().y) {
    this.down();
  } else {
    this.up();
  }
}
</pre></code>
